clear all
close all
clc

format short 

disp('%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%')
disp('%%    [Rob√≥tica - 23/10/2018 ~ 11/11/2018] LABWORK#2 - PROBLEMA 2    %%')
disp('%%                                                                   %%')
disp('%%                   Frederico Vaz, n¬∫ 2011283029                    %%')
disp('%%                   Paulo Almeida, n¬∫ 2010128473                    %%')
disp('%%                                                                   %%')
disp('%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%')
disp(' ')

%% Problema 2 - Obtenha os parametros de D-H dos 3 manipuladores

disp('**************************** ROBOT1 ***********************************')

syms d1 d2 theta3 theta4 theta5

% Offset/comprimentos dos elos (fixos)
syms L1 L2 L5

% Junta Rotacional ou Prismatica:
R = 1; P = 0;

% Robot 1 [PPRRR] - Matriz dos parametros de Denavith-Hartenberg: PJ_DH
%____________________________________________________________________________________
%          thetai  |  di  |  ai |  alfai | offseti | jointtypei
%____________________________________________________________________________________
PJ_DH = [  theta1      0      0     pi/2      pi/2          R;    % Junta prism√°tica
%____________________________________________________________________________________
                0     d2      0        0         L1          P;    % Junta prism√°tica
%____________________________________________________________________________________
           theta3      0      0    -pi/2          0          R;    % Punho esfÈrico
%____________________________________________________________________________________
           theta4      0      0     pi/2          0           R;    % Punho esfÈrico
%____________________________________________________________________________________
           theta5     L5      0        0          0           R ];  % Punho esfÈrico
%____________________________________________________________________________________

% A cinem√°tica directa da base at√© ao Gripper: 
[ T0_G, Ti ] = MGD_DH(PJ_DH);   

% Offset/comprimentos dos elos (fixos)
PJ_DH =  eval(subs(PJ_DH, [L1 L2 L5], [1 1 0.25]));


%% INICIALIZA√á√ÉO DO ROBOT: CRIAR LINKS

for i = 1 : size(PJ_DH,1)
    
    if PJ_DH(i,6) == R              % Juntas Rotacionais
        
        L(i) = Link('d',eval(PJ_DH(i,2)),...
                    'a', eval(PJ_DH(i,3)),...
                    'alpha', eval(PJ_DH(i,4)),...
                    'offset', eval(PJ_DH(i,5)));
    end
    
    if PJ_DH(i,6) == P              % Junta Prism√°tica
        
        L(i) = Link('theta',eval(PJ_DH(i,1)),...
                    'a', eval(PJ_DH(i,3)),...
                    'alpha', eval(PJ_DH(i,4)),...
                    'offset', eval(PJ_DH(i,5)),...
                    'qlim', [0 1]);
    end

end

robot = SerialLink(L, 'name', 'Rob√¥ Planar PPRRR');


%% VARI√ÅVEIS GLOBAIS

%Valores Juntas "HOME"
q_home = [0 0 0 0 0];

% Valores Juntas aleat√≥rio
q = [1 0.5 pi/4 pi/3 pi/6];
        

%% a) Representa√ß√£o do Gripper no mundo e b) Confirma√ß√£o dos dados

T0_G_ =  eval(subs(T0_G, [L1 L2 L5], [1 1 0.25])); 

% Matriz de transforma√ß√£o de O T G dados os valores das juntas do rob√¥
T0_G_values = eval(subs(T0_G_, [d1 d2 theta3 theta4 theta5], q));

% Confirma√ß√£o da Matriz usando a robotics toolbox 
T0_G_bytoolbox = robot.fkine(q);


%% c) Modelo inverso dos Robots e d) confirma√ß√£o usando a robotics toolbox 

% Aten√ß√£o: Correr sec√ß√£o a) e b) - depende de T0_G_values e Ti

syms nx ny nz sx sy sz ax ay az tx ty tz

T0_G_nsat = [ nx sx ax tx;
              ny sy ay ty;
              nz sz az tz;
               0  0  0  1 ];

% Cinem√°tica Inversa da Posi√ß√£o:
t = T0_G(1:3,4); % Colocar no MENU output


% Cinem√°tica Inversa da Orienta√ß√£o: 

% Auxiliar Mundo ao Bra√ßo: O T 2
T0_1 = Ti(:,:,1);
T1_2 = Ti(:,:,2);

T0_2 = simplify( T0_1 * T1_2 );

T2_0 = inv(T0_2);

% Auxiliar Elo 2 ao Gripper: 2 T G
T2_G = T2_0 * T0_G;

% Simplificando: De forma a usar os valores dados em O T G
% Previamente determinado/conhecendo d1 e d2 (L1 L2 s√£o constantes)

T2_G_nsat = T2_0 * T0_G_nsat; % Colocar no MENU output


% Juntas do Rob√¥ dadas pela Cinem√°tica Inversa do robot
q_byinv = inverse_kinematics_robot1(T0_G_values, Ti);


% Confirma√ß√£o usando a robotics toolbox 
q_bytoolbox = robot.ikine(T0_G_values, 'mask', [0 1 1 1 1 1]); % [x y z roll pitch yaw] 


% NOTA: p/ valores 0, pi/2 e pi a fun√ß√£o atan2 √© limitada no c√°lculos dos valores das juntas



%% MENU ("main")

select = 0;
first = 0;
sair = 4;

while (select ~= sair)
    
    % Matriz dos par√¢metros de Denavith-Hartenberg: PJ_DH e a O T G
    if first < 1
        disp('______________________________________________________________________')
        disp(' ')
        disp('a) Matriz dos par√¢metros de Denavith-Hartenberg: PJ_DH')
        disp('______________________________________________________________________')
        disp(' ')
        robot.display
        disp(' ')
        disp('______________________________________________________________________')
        disp(' ')
        disp('a) Cinem√°tica Directa: O T G')
        disp('______________________________________________________________________')
        disp(' ')
        disp(T0_G)
        disp(' ')
        disp('______________________________________________________________________')
        
        first = first + 1;
    end
    
    select = menu('Seleccione a ac√ß√£o a realizar:', 'a) & b) Plot do Rob√¥',...
                                                    'a) & b) Confirma√ß√£o',...
                                                    'c) & d) Cinem√°tica Inversa',...
                                                    'Sair');
                                                
    % a) e b) Representa√ß√£o grafica dos robots c/ o punho esf√©rico
    if select == 1
        
        figure('units','normalized','outerposition',[0 0 1 1]);
        % Prespectiva de lado do Robot  
        robot.teach(q_home, 'workspace', [-3 3 -3 3 -1 3], 'reach', 1,... 
                            'scale', 1, 'zoom', 0.65, 'jaxes'); 
                    % 'jaxes' - eixos
                    % 'jvec' - eixos c/ seta (vector)
    end
    
    % a) e b) Confirma√ß√£o dos dados
    if select == 2
        disp('______________________________________________________________________')
        disp(' ')
        disp('Matriz transforma√ß√£o obtida com MGD_DH() atrav√©s dos valores atribuidos em q[]')
        disp('______________________________________________________________________')
        disp(' ')
        disp('O T G:')
        disp(' ')
        disp(T0_G_values)
        disp('c) Confirma√ß√£o usando a toolbox Robotics:')
        disp(' ')
        disp(T0_G_bytoolbox)
        disp('______________________________________________________________________')
    end
    
    % c) Modelo inverso dos Robots
    if select == 3
        disp('______________________________________________________________________')
        disp(' ')
        disp('d) Solu√ß√£o de Cinem√°tica Inversa')
        disp('______________________________________________________________________')
        disp(' ')
        disp('Gripper no Mundo: O T G')
        disp(' ')
        disp(T0_G)
        disp('Mundo ao Bra√ßo: O T 2')
        disp(' ')
        disp(T0_2)
        disp('Elo 2 ao Gripper: 2 T G')
        disp(' ')
        disp(T2_G)
        
        disp('______________________________________________________________________')  
        disp(' ')
        disp('Valores das Juntas do rob√¥ usando o modelo da cinem√°tica inversa')
        disp('______________________________________________________________________')
        disp(' ')
        disp(['q = [ ' num2str(q(1)) 'm ' ...
                          num2str(q(2)) 'm ' ...
                          num2str(rad2deg(q(3))) '¬∫ ' ...
                          num2str(rad2deg(q(4))) '¬∫ ' ...
                          num2str(rad2deg(q(5))) '¬∫ ]'])
        disp(' ')              
        disp('c) Confirma√ß√£o usando a toolbox Robotics:')
        disp(' ')
        disp(['q = [ ' num2str(q_bytoolbox(1)) 'm ' ...
                       num2str(q_bytoolbox(2)) 'm ' ...
                       num2str(rad2deg(q_bytoolbox(3))) '¬∫ ' ...
                       num2str(rad2deg(q_bytoolbox(4))) '¬∫ ' ...
                       num2str(rad2deg(q_bytoolbox(5))) '¬∫ ]'])
        disp(' ')
        disp('______________________________________________________________________')  
    end
    
    % clear workspace
    if select == sair
       close all; 
    end
    
end     %fim do menu